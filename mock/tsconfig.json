{
  "compilerOptions": {
    "target": "esnext",
    "module": "commonjs",
    "strict": true,
    "jsx": "preserve",
    "importHelpers": true,
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "sourceMap": true,
    "baseUrl": ".",
    "types": [
      "node",
      "webpack-env"
    ]
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    "../node_modules/@types/node/globals.d.ts",
    "../node_modules/@types/webpack-env/index.d.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
